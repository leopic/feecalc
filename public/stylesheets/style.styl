// variables

$gray = rgba(0, 0, 0, 0.025)
$dark-gray = #333
$green = #21610B

body
  font: 16px/24px "Lucida Grande", Helvetica, Arial, sans-serif

h1
  color: $green
  margin-top: 50px

.amt
  color: $dark-gray
  font-size: 22px
  font-weight: bold
  line-height: 28px

.comparison
  border-radius: 3px
  display: inline-block
  margin: 20px 0 10px
  padding: 0 15px 15px
  vertical-align: top
  width: 320px
  -moz-transition: .2s linear all
  -webkit-transition: .2s linear all
  transition: .2s linear all

  &.best
    box-shadow:  0 0 30px lighten($green, 91%), 0 0 40px lighten($green, 94%), 0 0 50px lighten($green, 98%)

  h2
    text-align: center

  .b2b-initial-amount
    margin-bottom: 27px

.container
  margin: 0 auto
  width: 700px

.pay-breakdown
  margin: 0
  padding: 0
  list-style-type: none

.payment-method .pay-breakdown
  margin-right: 400px

  li
    color: #666
    list-style-type: none
    text-align: right

.receiving-amt
  display: inline-block
  vertical-align: top

.total-input
  background: #fff
  border: 1px solid lighten($green, 50%)
  box-shadow: inset 0 0 10px #eee
  border-radius: 3px
  font-size: 24px
  font-family: Georgia, Times New Roman, serif
  height: 40px
  margin: 10px 5px 0 10px
  padding: 0 10px
  text-align: center
  width: 80px
  -moz-transition: .2s linear all
  -webkit-transition: .2s linear all
  transition: .2s linear all

  &:focus
    box-shadow: inset 0 0 20px #eee, 0 0 30px lighten($green, 91%), 0 0 40px lighten($green, 94%), 0 0 50px lighten($green, 98%)
    outline: 0

// background images
.paypal
  background: url('/images/paypal.png') -5px 35px no-repeat

.bank-transfer
  background: url('/images/bncr.gif') left 48px no-repeat

.hidden
  display: none

// toggle classes, hide stuff when needed
.recommendation-body #comparison
  display: none

.comparison-body #recommendation
  display: none
